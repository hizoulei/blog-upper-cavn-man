  "compilerOptions": {
    "target": "esnext",
    "module": "CommonJS",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true
  },
  "include": [".eslintrc.js", "src"],
  "exclude": ["node_modules", "dist", "public"]
}
